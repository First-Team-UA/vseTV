{
  "name": "next-template",
  "version": "0.0.2",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:backend": "npm --prefix backend run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "npm --prefix frontend run build",
    "build:backend": "npm --prefix backend run build",
    "build": "npm run build:frontend && npm run build:backend",
    "start:frontend": "npm --prefix frontend run start",
    "start:backend": "npm --prefix backend run start",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "lint:frontend": "npm --prefix frontend run lint",
    "lint:backend": "npm --prefix backend run lint",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:fix:frontend": "npm --prefix frontend run lint:fix",
    "lint:fix:backend": "npm --prefix backend run lint:fix",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "typecheck:frontend": "npm --prefix frontend run typecheck",
    "typecheck:backend": "npm --prefix backend run typecheck",
    "typecheck": "npm run typecheck:frontend && npm run typecheck:backend",
    "format:write:frontend": "npm --prefix frontend run format:write",
    "format:write:backend": "npm --prefix backend run format:write",
    "format:write": "npm run format:write:frontend && npm run format:write:backend",
    "format:check:frontend": "npm --prefix frontend run format:check",
    "format:check:backend": "npm --prefix backend run format:check",
    "format:check": "npm run format:check:frontend && npm run format:check:backend"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/express-serve-static-core": "^4.19.1",
    "@types/hapi__joi": "^17.1.14",
    "@types/jsonwebtoken": "^9.0.6",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.4.0",
    "clsx": "^1.2.1",
    "concurrently": "^7.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fs": "^0.0.1-security",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "0.105.0-alpha.4",
    "mysql2": "^3.9.8",
    "next": "^13.4.8",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.31.3",
    "tailwind-merge": "^1.13.2",
    "tailwindcss-animate": "^1.0.6"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@types/express": "^4.17.21",
    "@types/node": "^17.0.45",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/parser": "^5.61.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.44.0",
    "eslint-config-next": "13.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  }
}
